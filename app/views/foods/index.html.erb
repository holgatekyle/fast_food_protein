<h1>Top Foods</h1>

Most Protein: <br>
<% @most_protein_top_3.each do |f| %>
        <%= f.company_name %> 
        <%= f.food_name %> 
        <%= f.protein.to_s().split(".")[0] %> <br>
        <% end %>
<p>
	
	Best Protein/cal Ratio: <br>
<% @most_protein_cal_top_3.each do |f| %>
        <%= f.company_name %> 
        <%= f.food_name %> 
        <%= (f.protein / (f.calories / 100)).round(1) %> <br> <!-- Calculates grams of protein per 100 calories-->
        <% end %>
<p>
	
	Best Protein/$ Ratio: <br>
<% @most_protein_dollar_top_3.each do |f| %>
        <%= f.company_name %> 
        <%= f.food_name %> 
        <%= (f.protein / f.cost).round(1) %> <br> <!-- Calculates grams of protein per 100 calories-->
        <% end %>
