
	<div class="center container-fluid">	
	<h1>Top Foods</h1>
	
	Most Protein: <br>
	<% @most_protein_top_3.each do |f| %>
	        <%= f.company_name %> 
	        <%= f.food_name %> 
	        <%= f.protein.to_s().split(".")[0] %> <br>
	        <% end %>
	<p>
		
		Best Protein/cal Ratio: <br>
	<% @most_protein_cal_top_3.each do |f| %>
	        <%= f.company_name %> 
	        <%= f.food_name %> 
	        <%= (f.protein / (f.calories / 100)).round(1) %> <br>
	        <% end %>
	<p>
		
		Best Protein/$ Ratio: <br>
	<% @most_protein_dollar_top_3.each do |f| %>
	        <%= f.company_name %> 
	        <%= f.food_name %> 
	        <%= (f.protein / f.cost).round(1) %> <br>
	        <% end %>
	</div>

	<div class="center container-fluid">	
	<h1>All Foods</h1>
	
	<%= form_tag("foods", method: "get") do %>
	  <%= label_tag(:company_name, "Search for:") %>

	  <%= collection_select(:company_list, :list, Food.all, :company_name, :company_name, {}, :multiple=>true) %>
	  
	  <br>
	  <%= submit_tag("Search") %>
	<% end %>
	
		<div class="table-responsive">
		  <table class="table table-striped">
		    <thead> 
		    	<tr>
		    		<th>Company Name</th>
		    		<th>Food Name</th>
		    		<th>Protein</th>
		    	</tr>
		    </thead>
		    <tbody>
		    	 <% @filtered_foods.sort_by{|a| a["protein"]}.reverse.each do |data| %>
		      <tr>
		      	<td><%= data.company_name %></b></td>
		      	<td><%= data.food_name %></td>
		      	<td><%= data.protein %></td>
		      </tr>
		    <% end %>
		    </tbody>
		  </table>
		</div>
	
	</div>
