<h3>All Results:</h3>
		<div class="table-responsive">
		  <table id="allfoods" class="tablesorter table-striped">
		    <thead> 
		    	<tr>
		    		<th>Company Name</th>
		    		<th>Food Name</th>
		    		<th>Calories</th>
		    		<th>Protein/100 kcal</th>
		    		<% if @show_pf %>
		    			<th>Protein/Fat</th>
		    		<% end %>
		    		<% if @show_pc %>
		    			<th>Protein/Carbs</th>
		    		<% end %>
		    		<th>Protein</th>
		    		<th>Fats</th>
		    		<th>Carbs</th>
		    		<% extra_columns_selected.each do |x|%>
		    		<th><%= normalize_column_name(x) %></th>
		    		<% end %>
		    	</tr>
		    </thead>
		    <tbody>
		    	 <% grid_food.sort_by{|a| a["protein"]}.reverse.each do |data| %>
		      <tr>
		      	<td class="left-text"><%= data.company_name %></b></td>
		      	<td class="left-text"><%= data.food_name.titleize %></td>
		      	<td><%= data.calories %></td>
		      	<td><%= (((data.protein*1.0)/data.calories)*100).round(1) %></td>
		      	<% if @show_pf %>
		    		<td><%= ((data.protein*1.0)/data.fat).round(2) %></td>
		    	<% end %>
		    	<% if @show_pc %>
		    		<td><%= ((data.protein*1.0)/data.carbs).round(2) %></td>
		    	<% end %>
		      	<td><%= data.protein %></td>
		      	<td><%= data.fat %></td>
		      	<td><%= data.carbs %></td>
			      	<% extra_columns_selected.each do |q| %>
			    		<td><%= data[q] %></td>
			    	<% end %>
		      </tr>
		    <% end %>
		    </tbody>
		  </table>
		</div>
		
<script>
	$(function(){
	  $('#allfoods').tablesorter(); 
	});
	
	$('#show-column-link').click(function() {
  $('#column_list').toggle();
});
</script>
